.section {
  margin-top: 50rpx;
  text-align: center;
}
.section .btn{
  display: inline-block;
  width: 190rpx;
  height: 82rpx;
  font-size: 36rpx;
  line-height: 78rpx;
  vertical-align: middle;
  color: #bc9861;
  border: 1px solid #bc9861;
  background-color: #fff;
}
.section .pay {
  border-radius: 5px 0 0 5px;
}
.section .income {
  border-radius: 0 5px 5px 0;
}
.section .active {
  color: #fff;
  background-color: #bc9861;
}
form picker {
  height: 40rpx;
  margin: 50rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  vertical-align: middle;
  color: #bc9861;
  display: inline-block;
} 
.picker-wrap{text-align: center;}
form .date image {
  width: 28rpx;
  height: 28rpx;
}
form .date image,
form .date text {
  vertical-align: middle;
}
.group {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.group text {
  padding-left: 38rpx;
  color: #acacac;
  font-size: 32rpx;
  flex-grow: 1;
  min-width: 150rpx;
  max-width: 150rpx;
}
.group .yuan {
  margin-right: 30rpx;
  text-align: right;
}
.group input,
.group navigator {
  flex-grow: 4;
  color: #333;
  font-size: 32rpx;
}
.group navigator {  
  color: #bc9861; 
}
.group navigator .icon {
  float: right;
  margin-right: 30rpx;
  width: 32rpx;
  height: 32rpx;
  vertical-align: bottom;
}
#money {
  font-size: 40rpx;
}
.group input {
  font-weight: normal;
}
form .submit {
  margin: 20rpx 40rpx 0 40rpx;
  color: #333;
  background-color: #ffc12f;
}

.placeholder-class {
  font: 100 30rpx/40rpx 'Heiti SC', 'Helvetica', 'HelveticaNeue', 'Droidsansfallback', 'Droid Sans', 'Dengxian', 'Segoe', 'microsoft yahei';
  color:#ACACAC;
}