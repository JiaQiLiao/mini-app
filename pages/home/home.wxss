page {
  background-color: #f0f0f0;
}
.header {
  position: relative;
  width: 750rpx;
  height: 282rpx;
  text-align: center;
  padding-top: 40rpx;
  background: #324b72;
  background-size: 750rpx 262rpx;
  color: #fff;
}
.header.reflow{
  margin-top:-1rpx;
}
.header image {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 282rpx;
  z-index: 0;
}
.header text {
  position: relative;
  display: block;
  width: 100%;
  font-size: 28rpx;
  z-index: 2;
}
.header .total {
  height: 120rpx;
  line-height: 120rpx;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
}
.header .total text {
  display: inline-block;
  font-size: 38px;
}
.tally{position: relative;display: inline-block;  font-size: 28rpx}
.tally:before{content:'';display: inline-block; width:31rpx;height: 36rpx;background: url(data:image/png;base64,) no-repeat;background-size: 100%;vertical-align:middle;}
